<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.cs160.ryykap.represent_final.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Welcome!"
            android:id="@+id/welcome_text" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please click on the location button to get started or enter a zip code to receive customized US representative information!"
        android:id="@+id/welcome_info_text"
        style="@style/Base.Animation.AppCompat.Dialog" />

    <ImageView
        android:layout_width="104dp"
        android:layout_height="130dp"
        android:id="@+id/loc_img"
        android:src="@drawable/location_image"
        android:onClick="goToGeoCongressional"
        android:layout_gravity="center_horizontal|bottom" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Fred"
        android:id="@+id/fred_btn"
        android:layout_below="@+id/lexy_img"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secondary Button Lexy"
        android:id="@+id/lexy_btn"
        android:layout_alignBottom="@+id/fred_btn"
        android:layout_alignStart="@+id/lexy_img"
        android:layout_alignEnd="@+id/lexy_img" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/zip_enter"
            android:hint="Enter Zipcode"
            android:phoneNumber="false"
            android:maxLength="5"
            android:maxLines="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZIP"
            android:onClick="goToCongressional"
            android:id="@+id/zip_button" />

    </LinearLayout>

</LinearLayout>
