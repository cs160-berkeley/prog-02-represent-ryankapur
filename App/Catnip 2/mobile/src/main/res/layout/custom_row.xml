<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="99dp"
        android:layout_height="99dp"
        android:id="@+id/imageView"
        android:src="@drawable/merkley"
        android:clickable="false"
        android:onClick="goToDetailed"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Jeff Merkley"
        android:clickable="true"
        android:id="@+id/name"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="email@email"
        android:id="@+id/email"
        android:layout_above="@+id/website"
        android:layout_alignStart="@+id/party"
        android:textIsSelectable="false"
        android:linksClickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="link to site"
        android:id="@+id/website"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignStart="@+id/email"
        android:textIsSelectable="false"
        android:linksClickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Democrat"
        android:clickable="true"
        android:id="@+id/party"
        android:textSize="14dp"
        android:layout_below="@+id/type"
        android:layout_alignStart="@+id/type" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Senator"
        android:id="@+id/type"
        android:textSize="14dp"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:text="dummy tweet"
        android:id="@+id/tweets"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:id="@+id/imageView2"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:src="@drawable/twitter"
        android:paddingStart="5dp" />

</RelativeLayout>