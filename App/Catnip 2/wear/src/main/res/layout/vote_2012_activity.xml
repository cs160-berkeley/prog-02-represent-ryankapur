<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center" android:layout_gravity="center"
    tools:context=".MainActivity" android:orientation="vertical" tools:deviceIds="wear_round"
    android:background="#ffffff"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="29dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.43"
        android:weightSum="1">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="33dp"
            android:id="@+id/imageView2"
            android:layout_weight="0.73" />

        <TextView
            android:layout_width="45dp"
            android:layout_height="64dp"
            android:textAppearance="@style/TextAppearance.Wearable.Small"
            android:text="2012 Presidental Vote"
            android:id="@+id/header"
            android:textColor="#000000"
            android:textSize="11sp"
            android:layout_weight="0.97" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="128dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Washington Co."
                android:id="@+id/county"
                android:textColor="#000000"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Portland"
                android:id="@+id/city"
                android:textColor="#000000"
                android:textSize="11sp" />

            <TextView
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="OR"
                android:id="@+id/state"
                android:textColor="#000000"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="77dp"
            android:contentDescription="obamaa"
            android:layout_height="77dp"
            android:id="@+id/obama"
            android:background="@drawable/obama"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/imageView" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="77dp"
            android:id="@+id/romney"
            android:background="@drawable/romney" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="45%"
            android:id="@+id/romney_percent"
            android:textColor="#000000"
            android:layout_gravity="right|top" />

        <TextView
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="55%"
            android:id="@+id/obama_percent"
            android:textColor="#000000"
            android:layout_weight="0.82"
            android:layout_gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="22dp"
        android:weightSum="1">

    </LinearLayout>

</LinearLayout>